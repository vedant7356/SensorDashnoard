<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensors In Android"
            android:textColor="#FF5733"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="8dp" />

        <!-- Accelerometer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The accelerometer measures the acceleration applied to the device, including the force of gravity. The values are displayed in m/s² along the X, Y, and Z axes."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/accelData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartAccel"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Gyroscope Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyroscope"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The gyroscope measures the device's rate of rotation around the X, Y, and Z axes. The values are displayed in rad/s."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/gyroData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyroscope Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartGyro"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Magnetometer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magnetometer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The magnetometer measures the ambient magnetic field in the X, Y, and Z axes. The values are displayed in microteslas (µT)."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/magData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magnetometer Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartMag"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Proximity Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximity"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The proximity sensor measures the distance of an object from the device, typically used to detect when a device is near the user's face during a call. The value is displayed in centimeters (cm)."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/proxData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximity Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartProx"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Light Sensor Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Sensor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The light sensor measures the ambient light level (illumination) in lux (lx). This is typically used to adjust the screen brightness."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/lightData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Sensor Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartLight"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Barometer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barometer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The barometer measures the atmospheric pressure, which can be used to determine altitude. The value is displayed in hectopascals (hPa)."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/baroData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barometer Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartBaro"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Temperature Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The temperature sensor measures the ambient temperature around the device. The value is displayed in degrees Celsius (°C)."
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tempData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature Data"
            android:textSize="16sp"
            android:padding="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartTemp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
